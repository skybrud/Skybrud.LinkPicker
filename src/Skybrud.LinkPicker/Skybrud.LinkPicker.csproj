    <Content Include="App_Plugins\Skybrud.LinkPicker\Styles\Default.less" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Skybrud.InnerContent">
      <HintPath>..\..\..\Skybrud.InnerContent\src\Skybrud.InnerContent\bin\Debug\net472\Skybrud.InnerContent.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Content Update="App_Plugins\Skybrud.LinkPicker\Styles\Default.css">
      <DependentUpon>Default.less</DependentUpon>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Update="App_Plugins\Skybrud.LinkPicker\Styles\Default.min.css">
      <DependentUpon>Default.css</DependentUpon>
    </Content>
  </ItemGroup>

</Project>